                <h4>{Thirdpost.map((post) =><p>{post.frontmatter.category} | 8 mins read</p>)}</h4>
            </div>
        </div>

        <div class="post-grid">
            <Image src={Principal4} alt="" class="img-post" />
            <div class="data">
                <h4 class="meta">{Fourpost.map((post) =><p>{post.frontmatter.author} | {post.frontmatter.pubDate}</p>)}</h4>
                <h2>{Fourpost.map((post) =><a href={post.url}>{post.frontmatter.title}</a>)}</h2>
                <h4>{Fourpost.map((post) =><p>{post.frontmatter.category} | 8 mins read</p>)}</h4>
            </div>
        </div>

        <div class="post-grid">
            <Image src={Principal5} alt="" class="img-post" />
            <div class="data">
                <h4 class="meta">{Fourpost.map((post) =><p>{post.frontmatter.author} | {post.frontmatter.pubDate}</p>)}</h4>
                <h2>{Fivepost.map((post) =><a href={post.url}>{post.frontmatter.title}</a>)}</h2>
                <h4>{Fivepost.map((post) =><p>{post.frontmatter.category} | 8 mins read</p>)}</h4>
            </div>
