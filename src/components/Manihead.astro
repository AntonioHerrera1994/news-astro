---
const Firstpost = await Astro.glob('../pages/posts/crypto-1.md');
const Secondpost = await Astro.glob('../pages/posts/finanzas1.md');
const Thirdpost = await Astro.glob('../pages/posts/analisis-1.md');
const Fourpost = await Astro.glob('../pages/posts/tec1.md');
const Fivepost = await Astro.glob('../pages/posts/finanzas2.md');

import '../styles/mainhead.css'

import {Image} from 'astro:assets';
import myImage from "../assets/Cover_Blog_PW_16.02.24.png";
---

<div class="maninhead">
    <div class="main-cont">
        <div class="main-grid">
    <div class="banner">
        <h1>{Firstpost.map((post) =><a href={post.url}>{post.frontmatter.title}</a>)}</h1>
        <p>{Firstpost.map((post) =><p>{post.frontmatter.description}</p>)}</p>

        <h4 class="meta">{Firstpost.map((post) =><p>{post.frontmatter.category} | {post.frontmatter.author} | {post.frontmatter.pubDate}</p>)} </h4>
    </div>  
    <div>
        <Image src={myImage} alt="" class="image" />
    </div>

    <div>
        <div class="post-grid">
            <Image src={myImage} alt="" class="img-post" />
            <div class="data">
                <h4 class="meta">{Secondpost.map((post) =><p>{post.frontmatter.author} | {post.frontmatter.pubDate}</p>)}</h4>
                <h2>{Secondpost.map((post) =><a href={post.url}>{post.frontmatter.title}</a>)}</h2>
                <h4>{Secondpost.map((post) =><p>{post.frontmatter.category} | 8 mins read</p>)}</h4>
            </div>
        </div>

        <div class="post-grid">
            <Image src={myImage} alt="" class="img-post" />
